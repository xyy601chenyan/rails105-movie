<h2 class="text-center">编辑评论</h2>
<div class="col-md-4 col-md-offset-4">
  <%=simple_form_for [@movie,@review] do |f|%>
  <div class="form-movie">
    <%=f.input :content, input_html: {class: "form-control"}%>
  </div>
  <div class="form-actions">
    <%= f.submit "Submit", disable_with: "Submiting...",class: "btn btn-primary"%>
  </div>
  <div class="form-actions" >
    <%= link_to("back",movie_path(@movie),class: "btn btn-primary pull-right" ,style:"margin-top:-37px;")%>
  </div>
  <% end %>
</div>
