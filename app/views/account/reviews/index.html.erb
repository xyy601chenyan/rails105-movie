<div class="col-md-12">
  <h1 class="text-center">我发表的留言</h1>
  <table class="table">
    <thead>
      <tr>
       <th>
         内容
       </th>
       <th>
         电影名
       </th>
       <th>
         最近更新时间
       </th>
       <th colspan="2">

       </th>
      </tr>
    </thead>
      <tbody>
        <% @reviews.each do |review|%>
        <tr>
          <td>
            <%=link_to(review.content,movie_review_path(review.movie,review))%>
          </td>
          <td>
            <%=review.movie.title%>

          </td>
          <td>
            <%=review.updated_at%>
          </td>
           <td>
             <%=link_to('Edit',edit_movie_review_path(review.movie,review),class:"btn btn-default btn-xs" )%>
           </td>
           <td>
             <%=link_to('Delete',movie_review_path(review.movie,review),method: :delete,data:{confirm:"Are you sure?"},
             class:"btn btn-default btn-xs")%>
           </td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>
