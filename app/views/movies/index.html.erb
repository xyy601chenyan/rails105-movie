<div class="col-md-12">
  <div class="movie">
    <%=link_to("New movie", new_movie_path,class: "btn btn-primary pull-right")%>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>
          编号
        </td>
        <td>
          Title
        </td>
        <td>
          Description
        </td>
        <td>
          Creator
        </td>
        <td>
          Operation
        </td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie|%>
      <tr>
        <td>
          <%=movie.id%>
        </td>
        <td>
          <%=link_to(movie.title,movie_path(movie))%>
        </td>
        <td>
        <%=render_movie_description(movie)%>
        </td>
        <td>
          <%=movie.user.email%>
        </td>
        <% if current_user&& current_user==movie.user%>
        <td>
          <%=link_to("Edit",edit_movie_path(movie),class: "btn btn-sm btn-default")%>
          <%=link_to("Delete",movie_path(movie),class: "btn btn-sm btn-default", method: :delete,data: {confirm:"Are you sure?"})%>
        </td>
        <% else %>
        <td>

        </td>
        <% end %>
      </tr>
      <% end%>
    </tbody>
  </table>

</div>
